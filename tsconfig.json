{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "experimentalDecorators": true,
        "paths": {
            "@/*": ["./src/components/*"],
            "~/hooks/*": ["./src/hooks/*"],
            "~/tools/*": ["./src/tools/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
